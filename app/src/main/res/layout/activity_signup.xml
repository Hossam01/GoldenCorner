<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.LogInActivity"
    android:layout_marginBottom="-15dp"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <ImageView
        android:id="@+id/signup_activity_close_icn"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginVertical="32dp"
        android:layout_marginStart="16dp"
        android:contentDescription="@string/back"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_back" />

    <TextView
        android:id="@+id/signup_activity_signup_txt"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="@string/new_account_signup"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:paddingTop="10dp"
        app:cardBackgroundColor="@color/whiteColor"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_activity_signup_txt">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp">


                <TextView
                    android:id="@+id/signup_activity_firstname_txt"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/first_name"
                    android:textColor="@color/colorText"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/signup_activity_firstname_edit_text"
                    app:layout_constraintStart_toStartOf="@+id/signup_activity_firstname_edit_text"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/signup_activity_firstname_edit_text"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/edit_text_shape"
                    android:hint="@string/first_name"
                    android:inputType="textPersonName"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="9dp"
                    android:singleLine="true"
                    android:textColor="@color/colorText"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/signup_activity_firstname_txt"
                    app:layout_constraintVertical_chainStyle="packed" />


                <TextView
                    android:id="@+id/signup_activity_family_name_txt"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/family_name"
                    android:textColor="@color/colorText"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/signup_activity_firstname_edit_text"
                    app:layout_constraintTop_toBottomOf="@+id/signup_activity_firstname_edit_text" />

                <EditText
                    android:id="@+id/signup_activity_family_name_edit_text"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/edit_text_shape"
                    android:text="@string/family_name"
                    android:inputType="textPersonName"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="9dp"
                    android:singleLine="true"
                    android:textColor="@color/colorText"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/signup_activity_family_name_txt"
                    app:layout_constraintVertical_chainStyle="packed" />

                <TextView
                    android:id="@+id/signup_activity_phone_txt"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/phone_number"
                    android:textColor="@color/colorText"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/signup_activity_family_name_edit_text" />

                <EditText
                    android:id="@+id/signup_activity_phone_edit_text"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/edit_text_shape"
                    android:hint="@string/phone_number"
                    android:inputType="phone"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="9dp"
                    android:singleLine="true"
                    android:textColor="@color/colorText"
                    app:layout_constraintTop_toBottomOf="@+id/signup_activity_phone_txt" />


                <TextView
                    android:id="@+id/signup_activity_email_txt"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/email"
                    android:textColor="@color/colorText"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/signup_activity_email_edit_text"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/signup_activity_phone_edit_text" />

                <TextView
                    android:id="@+id/optional"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/optional"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintBaseline_toBaselineOf="@+id/signup_activity_email_txt"
                    app:layout_constraintStart_toEndOf="@+id/signup_activity_email_txt" />

                <EditText
                    android:id="@+id/signup_activity_email_edit_text"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/edit_text_shape"
                    android:hint="@string/email"
                    android:inputType="phone"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="9dp"
                    android:singleLine="true"
                    android:textColor="@color/colorText"
                    app:layout_constraintTop_toBottomOf="@+id/signup_activity_email_txt" />

                <TextView
                    android:id="@+id/signup_activity_password_txt"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/password"
                    android:textColor="@color/colorText"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/signup_activity_password_edit_text"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/signup_activity_email_edit_text" />

                <EditText
                    android:id="@+id/signup_activity_password_edit_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_shape"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:paddingStart="8dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="10dp"
                    android:singleLine="true"
                    android:textColor="@color/colorText"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/signup_activity_password_txt" />

                <TextView
                    android:id="@+id/signup_activity_password_confirm_txt"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/confirm_password"
                    android:textColor="@color/colorText"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/signup_activity_password_edit_text" />

                <EditText
                    android:id="@+id/signup_activity_password__confirm_edit_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_shape"
                    android:hint="@string/confirm_password"
                    android:inputType="textPassword"
                    android:paddingStart="8dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="10dp"
                    android:singleLine="true"
                    android:textColor="@color/colorText"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/signup_activity_password_confirm_txt" />

                <CheckBox
                    android:id="@+id/signup_activity_rules_checkbox"
                    android:layout_width ="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="22dp"
                    android:layout_marginBottom="10dp"
                    android:buttonTint="@android:color/transparent"
                    android:background="@drawable/check_box_bg"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:checked="false"
                    app:layout_constraintTop_toBottomOf="@+id/signup_activity_password__confirm_edit_text"
                    app:layout_constraintBottom_toTopOf="@+id/signupBtn"
                    app:layout_constraintStart_toStartOf="parent" />

<!--                checked

android:background="@drawable/check_box_selector"-->
                <TextView
                    android:id="@+id/dinNextRegularTextView24"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/_09665xxxxxxxx"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintBaseline_toBaselineOf="@+id/signup_activity_phone_txt"
                    app:layout_constraintStart_toEndOf="@+id/signup_activity_phone_txt" />

                <TextView
                    android:id="@+id/signup_activity_rules_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="-4dp"
                    android:layout_marginEnd="16dp"
                    android:text="@string/accept_terms"
                    android:textColor="@color/colorText"
                    app:layout_constraintBottom_toBottomOf="@+id/signup_activity_rules_checkbox"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/signup_activity_rules_checkbox"
                    app:layout_constraintTop_toTopOf="@+id/signup_activity_rules_checkbox" />


                <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
                    android:id="@+id/signupBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/login_button_shape"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:padding="7dp"
                    android:text="@string/signup"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@+id/signup_activity_rules_checkbox"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

    <include layout="@layout/dilating_dot_progress_bar"/>
    <include layout="@layout/coordinator_layout"/>
</androidx.constraintlayout.widget.ConstraintLayout>