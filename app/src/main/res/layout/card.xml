<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/whiteColor"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <LinearLayout
            android:orientation="vertical"
            android:paddingVertical="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/cardIV"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/card_mada"
                android:scaleType="fitCenter"
                android:paddingHorizontal="20dp"
                />

            <TextView
                android:id="@+id/cardNameTV"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:minWidth="100dp"
                android:textStyle="bold"
                android:fontFamily="@font/din_next_regular"
                android:gravity="center"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="15dp"
                android:text="KHALED AHMED"
                android:layout_weight="1"
                android:textAllCaps="true"
                android:background="@drawable/text_view_white_bg"
                android:textColor="@color/textColor3"/>

            <TextView
                android:id="@+id/cardNumberTV"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minWidth="100dp"
                android:textStyle="bold"
                android:fontFamily="@font/din_next_regular"
                android:gravity="center"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="15dp"
                android:text="855521841XXXXX"
                android:layout_weight="1"
                android:textAllCaps="true"
                android:background="@drawable/text_view_white_bg"
                android:textColor="@color/textColor3"/>

            <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
                android:id="@+id/addCardBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="15dp"
                android:fontFamily="@font/din_next_regular"
                android:gravity="center"
                android:text="@string/delete"
                android:textColor="@android:color/white"
                style="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintTop_toBottomOf="@+id/commentET"
                android:background="@drawable/login_button_shape"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>