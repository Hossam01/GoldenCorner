<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="@dimen/activity_vertical_margin"
    android:paddingHorizontal="@dimen/activity_horizontal_margin"
    android:textDirection="locale"
    android:layoutDirection="locale"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.golden.goldencorner.ui.main.termsAndCondition.TermsAndConditionFragment">

    <TextView
        android:id="@+id/titleTVterms"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terms And Conditions"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:fontFamily="@font/din_next_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewLine"
        android:layout_width="50dp"
        android:layout_height="4dp"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTVterms"
        android:background="@color/colorPrimaryDark"
        />
    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewLine">

        <TextView
            android:id="@+id/termsAndConditionsTV"
            android:fontFamily="@font/din_next_regular"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Terms And Conditions"
            android:layout_marginVertical="10dp"
            android:textColor="@android:color/black" />

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>