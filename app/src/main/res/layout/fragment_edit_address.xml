<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:fillViewport="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/lightGray2"
            app:cardElevation="2dp"
            app:cardCornerRadius="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                >

                <EditText
                    android:id="@+id/addressNameET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_white_bg"
                    android:inputType="text"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="10dp"
                    android:layout_marginTop="10dp"
                    android:hint="Address Name : Home"
                    android:layout_marginHorizontal="20dp"
                    android:fontFamily="@font/din_next_regular"
                    style="@style/TextAppearance.AppCompat.Small"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardHolderNameTv" />

                <EditText
                    android:id="@+id/userNameET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_white_bg"
                    android:inputType="text"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="10dp"
                    android:layout_marginTop="10dp"
                    android:hint="Name : Khaled Ahmed Algobary"
                    android:layout_marginHorizontal="20dp"
                    android:fontFamily="@font/din_next_regular"
                    style="@style/TextAppearance.AppCompat.Small"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/addressNameET" />

                <EditText
                    android:id="@+id/userMobileET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_white_bg"
                    android:inputType="text"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="10dp"
                    android:layout_marginTop="10dp"
                    android:hint="Mobile Number : 0512565874"
                    android:layout_marginHorizontal="20dp"
                    android:fontFamily="@font/din_next_regular"
                    style="@style/TextAppearance.AppCompat.Small"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/userNameET" />

                <EditText
                    android:id="@+id/userEmailET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_white_bg"
                    android:inputType="text"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="10dp"
                    android:layout_marginTop="10dp"
                    android:hint="Email : mail@mail.com"
                    android:layout_marginHorizontal="20dp"
                    android:fontFamily="@font/din_next_regular"
                    style="@style/TextAppearance.AppCompat.Small"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/userMobileET" />

                <EditText
                    android:id="@+id/userCityET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_white_bg"
                    android:inputType="text"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="10dp"
                    android:layout_marginTop="10dp"
                    android:hint="City : Aldamam"
                    android:layout_marginHorizontal="20dp"
                    android:fontFamily="@font/din_next_regular"
                    style="@style/TextAppearance.AppCompat.Small"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/userEmailET" />

                <EditText
                    android:id="@+id/userNeighborhoodET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_white_bg"
                    android:inputType="text"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="10dp"
                    android:layout_marginTop="10dp"
                    android:hint="Neighborhood : Ibn Khaldoon"
                    android:layout_marginHorizontal="20dp"
                    android:fontFamily="@font/din_next_regular"
                    style="@style/TextAppearance.AppCompat.Small"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/userCityET" />

                <EditText
                    android:id="@+id/userStreetET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_white_bg"
                    android:inputType="text"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="10dp"
                    android:layout_marginTop="10dp"
                    android:hint="@string/street"
                    android:layout_marginHorizontal="20dp"
                    android:fontFamily="@font/din_next_regular"
                    style="@style/TextAppearance.AppCompat.Small"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/userNeighborhoodET" />

                <EditText
                    android:id="@+id/addressNoteTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_white_bg"
                    android:minHeight="90dp"
                    android:inputType="text"
                    android:gravity="start"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="10dp"
                    android:layout_marginTop="10dp"
                    android:hint="@string/address_note"
                    android:layout_marginHorizontal="20dp"
                    android:fontFamily="@font/din_next_regular"
                    style="@style/TextAppearance.AppCompat.Small"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/userStreetET" />


                <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
                    android:id="@+id/saveAddressCBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:paddingHorizontal="25dp"
                    android:gravity="center"
                    android:text="@string/save_data"
                    app:spinning_bar_padding="7dp"
                    android:textColor="@android:color/white"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:layout_marginHorizontal="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/addressNoteTV"
                    android:background="@drawable/button_bg"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>