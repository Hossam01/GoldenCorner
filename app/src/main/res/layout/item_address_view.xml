<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/lightGray2"
        app:cardElevation="2dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="20dp"
            >

            <TextView
                android:id="@+id/addressNameTV"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/edit_text_white_bg"
                android:fontFamily="@font/din_next_regular"
                android:hint="@string/address_name"
                android:inputType="text"
                android:paddingHorizontal="8dp"
                android:textColor="@color/black"
                android:paddingVertical="5dp"
                app:layout_constraintEnd_toStartOf="@+id/userCityTV"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardHolderNameTv" />

            <TextView
                android:id="@+id/userNameTV"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"

                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_white_bg"
                android:fontFamily="@font/din_next_regular"
                android:hint="Name : Khaled Ahmed Algobary"
                android:inputType="text"
                android:paddingHorizontal="8dp"
                android:paddingVertical="5dp"
                app:layout_constraintEnd_toStartOf="@+id/userNeighborhoodTV"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/addressNameTV" />

            <TextView
                android:id="@+id/userMobileTV"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_white_bg"
                android:inputType="text"
                android:paddingHorizontal="8dp"
                android:paddingVertical="5dp"
                android:layout_marginTop="10dp"
                android:hint="Mobile Number : 0512565874"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/din_next_regular"
                android:textColor="@color/black"
                app:layout_constraintEnd_toStartOf="@+id/userStreetTV"
                style="@style/TextAppearance.AppCompat.Small"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/userNameTV" />

            <TextView
                android:id="@+id/userEmailTV"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_white_bg"
                android:inputType="text"
                android:paddingHorizontal="8dp"
                android:paddingVertical="5dp"
                android:textColor="@color/black"

                android:layout_marginTop="10dp"
                android:hint="Email : mail@mail.com"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/din_next_regular"
                style="@style/TextAppearance.AppCompat.Small"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/addressNoteTV"
                app:layout_constraintTop_toBottomOf="@+id/userMobileTV" />

            <TextView
                android:id="@+id/userCityTV"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/black"
                android:background="@drawable/edit_text_white_bg"
                android:fontFamily="@font/din_next_regular"
                android:hint="Neighborhood : Ibn Khaldoon"
                android:inputType="text"
                android:paddingHorizontal="8dp"
                android:paddingVertical="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/addressNameTV"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/userNeighborhoodTV"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_white_bg"
                android:fontFamily="@font/din_next_regular"
                android:hint="Neighborhood : Ibn Khaldoon"
                android:inputType="text"
                android:paddingHorizontal="8dp"
                android:paddingVertical="5dp"
                app:layout_constraintEnd_toEndOf="parent"

                app:layout_constraintStart_toEndOf="@+id/userNameTV"
                app:layout_constraintTop_toBottomOf="@+id/userCityTV" />

            <TextView
                android:id="@+id/userStreetTV"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_white_bg"
                android:fontFamily="@font/din_next_regular"
                android:hint="@string/street"
                android:inputType="text"
                android:paddingHorizontal="8dp"
                android:paddingVertical="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/userMobileTV"
                app:layout_constraintTop_toBottomOf="@+id/userNeighborhoodTV" />

            <TextView
                android:id="@+id/addressNoteTV"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="160dp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_white_bg"
                android:fontFamily="@font/din_next_regular"
                android:hint="@string/address_note"
                android:inputType="text"
                android:minHeight="90dp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/userEmailTV"
                app:layout_constraintTop_toBottomOf="@+id/userStreetTV" />


            <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
                android:id="@+id/editAddressBtn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:paddingHorizontal="15dp"
                android:gravity="center"
                android:text="@string/edit_address"
                android:textColor="@android:color/white"
                style="@style/TextAppearance.AppCompat.Small"
                android:fontFamily="@font/din_next_regular"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintEnd_toStartOf="@+id/space"
                app:layout_constraintTop_toBottomOf="@+id/addressNoteTV"
                android:background="@drawable/button_bg"/>

            <Space
                android:id="@+id/space"
                android:layout_width="1dp"
                android:layout_height="?attr/actionBarSize"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/addressNoteTV"
                />
            <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
                android:id="@+id/deleteAddressBtn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="20dp"
                android:paddingHorizontal="15dp"
                android:fontFamily="@font/din_next_regular"
                android:gravity="center"
                android:text="@string/delete_address"
                android:textColor="@color/colorPrimary"
                style="@style/TextAppearance.AppCompat.Small"
                app:layout_constraintStart_toEndOf="@+id/space"
                app:layout_constraintTop_toBottomOf="@+id/addressNoteTV"
                android:background="@drawable/stroke_bg_red"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>