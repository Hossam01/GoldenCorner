<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingHorizontal="10dp"
    android:layout_marginTop="10dp"
    android:gravity="center_vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="85dp"
        app:cardCornerRadius="5dp"
        android:layout_weight="2"
        app:cardElevation="5dp">
        <ImageView
            android:id="@+id/branchesIV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/catogri1"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            />

    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:id="@+id/branch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/stroke_bg_red"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_gravity="start|top"
        android:gravity="start|top"
        android:layout_margin="10dp"
        >

        <TextView
            android:id="@+id/branchTitleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Etesalat Branch"
            android:layout_marginStart="9dp"
            android:lines="1"
            android:textColor="@color/textColor3"
            style="@style/TextAppearance.AppCompat.Small"
            android:fontFamily="@font/din_next_bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/adsIV"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/from_you"
                android:lines="1"
                android:textColor="@color/textColor3"
                style="@style/TextAppearance.AppCompat.Small"
                android:fontFamily="@font/din_next_regular"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/adsIV"
                />
            <TextView
                android:id="@+id/branchDistanceTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20 km"
                android:lines="1"
                android:textColor="@color/textColor3"
                style="@style/TextAppearance.AppCompat.Small"
                android:fontFamily="@font/din_next_regular"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/adsIV"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >


            <ImageView
                android:id="@+id/openIV"
                android:layout_width ="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/rounded_grean_bg"
                android:padding="7dp"
                android:layout_marginHorizontal="7dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"

                />
            <TextView
                android:id="@+id/openTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/open_now"
                android:lines="1"
                android:textColor="@color/textColor3"
                style="@style/TextAppearance.AppCompat.Small"
                android:fontFamily="@font/din_next_regular"
                app:layout_constraintTop_toTopOf="@+id/openIV"
                app:layout_constraintStart_toEndOf="@+id/openIV"
                app:layout_constraintBottom_toBottomOf="@+id/openIV"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>